<div class="box box-3">
  <%= image_tag found.found_img.medium.url, class:"img-responsive" %>
  <h3 class="bg-default" style="text-align: center;"><%= found.title %></h3>
  <p class="bg-success"><strong>Category:</strong> <%= found.category.try(:name) %></p>
  <p class="bg-info"><strong>Date:</strong> <%= found.found_date %></p>
  <p class="bg-warning"><strong>Location:</strong> <%= found.location %></p>
  <p class="bg-danger"><strong>Description:</strong> <%= "#{found.description[0...20]}........"  %></p>

  <p class="bg-default"><strong>Contact info:</strong></p>
  <p class="bg-default"><strong>Name:</strong> <%= found.name %></p>
  <p class="bg-default"><strong>Email:</strong> <%= found.email %></p>
  <p class="bg-default"><strong>Phone:</strong> <%= found.phone %></p>

  <%= link_to 'Show', found, class: 'btn btn-success' %>
  <%= link_to 'Edit', edit_found_path(found), class: 'btn btn-info' if can? :manage, Found %>

  <% if can? :delete, Lost %>
    <button type="button" class="btn btn-default" aria-label="Left Align">
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
      <%= link_to 'Destroy', found_path(found), method: :delete, data:{ confirm: 'Delete the Lost Ad. Are you sure?'} %>
    </button>
  <% end %>

</div>
