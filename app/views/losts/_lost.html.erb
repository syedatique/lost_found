<div class="box box-3">
  <%= image_tag lost.lost_img.medium.url, class:"img-responsive" %>
  <h3 class="bg-default" style="text-align: center;"><%= lost.title %></h3>
  <p class="bg-success"><strong>Category:</strong> <%= lost.category.try(:name) %></p>
  <p class="bg-info"><strong>Date:</strong> <%= lost.lost_date %></p>
  <p class="bg-warning"><strong>Location:</strong> <%= lost.location %></p>
  <p class="bg-danger"><strong>Description:</strong> <%= "#{lost.description[0...20]}........"  %></p>
  <p class="bg-default"><strong>Contact info:</strong></p>

  <p class="bg-default"><strong>Name:</strong> <%= lost.name %></p>
  <p class="bg-default"><strong>Email:</strong> <%= lost.email %></p>
  <p class="bg-default"><strong>Phone:</strong> <%= lost.phone %></p>




  <!-- </div> -->
  <!-- <div class="thumbnail" style="border:none;"> -->
  <%= link_to 'Show', lost, class: 'btn btn-success' %>
  <%= link_to 'Edit', edit_lost_path(lost), class: 'btn btn-info' if can? :manage, Lost %>
  <button type="button" class="btn btn-default" aria-label="Left Align">
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
      <%= link_to 'Destroy', lost_path(lost), method: :delete, data:{ confirm: 'Delete the Lost Ad. Are you sure?'} if can? :delete, Lost %>
  </button>
</div>
